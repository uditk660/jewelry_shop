<div class="glass-card wide-form">
  <%= form_for @company, html: { multipart: true } do |f| %>

    <div class="form-grid">
      <div>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
      </div>

      <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div>
        <%= f.label :pin %>
        <%= f.text_field :pin %>
      </div>

      <div>
        <%= f.label :gst %>
        <%= f.text_field :gst %>
      </div>

      <div>
        <%= f.label :pan %>
        <%= f.text_field :pan %>
      </div>

      <div>
        <%= f.label :adhaar %>
        <%= f.text_field :adhaar %>
      </div>
    </div>

    <div class="full-width">
      <%= f.label :address %>
      <%= f.text_area :address, rows: 3 %>
    </div>

    <div class="full-width">
      <%= f.label :logo %>
      <%= f.file_field :logo %>
      <% if @company.logo.exists? %>
        <br>
        <%= image_tag @company.logo.url(:thumb) %>
      <% end %>
    </div>

    <div class="actions">
      <%= f.submit class: "btn-primary" %>
    </div>

  <% end %>
</div>
